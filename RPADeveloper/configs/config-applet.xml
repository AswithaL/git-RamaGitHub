<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://web-harvest.sourceforge.net/schema/1.0/config" scriptlang="groovy">
  
    <robotics-flow>
        <robot name="chrome" driver="chrome" close-on-completion="false">
            <script><![CDATA[
                open('https://rpa-tutorial.s3.amazonaws.com/table/login.html')
                $(byLinkText('Login')).click()
                $('a').click()
                sleep(8000)
            ]]></script>
        </robot>
 
        <robot name="bb8" driver="desktop" close-on-completion="true">
            <capability name="SEARCH_ALL_WINDOWS" value="true" />
            <script> <![CDATA[
                             
                timeouts(40 * 1000)
                switchTo().window('[CLASS:SunAwtFrame;TITLE:Frame]')
                 sleep(3000)
                sendKeys('{TAB 3}')
  
                def text = selectAllTextAndCopy()
                pressTab()
                sendKeys(text)
               
                sleep(3000)
                 
            ]]></script>
        </robot>
         
        <robot name="chrome" driver="chrome" close-on-completion="true"/>
             
    </robotics-flow>
    <export include-original-data="false"/>
</config>